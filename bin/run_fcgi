#!/bin/bash

# Replace these three settings.
PROJDIR="/opt/mp"
PIDFILE="$PROJDIR/site.pid"
SOCKET="$PROJDIR/site.sock"

cd $PROJDIR
if [ -f $PIDFILE ]; then
    kill `cat -- $PIDFILE`
    rm -f -- $PIDFILE
fi

exec /usr/bin/env - \
  PYTHONPATH="../python:.." \
   /opt/mp/manage.py runfcgi method=threaded host=217.160.188.60 port=8000 pidfile=$PIDFILE
#  ../manage.py runfcgi socket=$SOCKET pidfile=$PIDFILE
